<div class="modal fade" id="changeMoodModal" tabindex="-1" aria-labelledby="changeMoodModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="changeMoodModalLabel">Change mood</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for event,
          remote: true, 
          wrapper: :horizontal_form,
          wrapper_mappings: {
            radio_buttons: :horizontal_collection
          } do |f| %>
      <div class="modal-body">
        <div class="change-mood">
          <%= f.input_field :theme, as: :radio_buttons, collection: ['Wild', 'Nature', "Fancy", 'Cozy'], wrapper: :horizontal_collection_inline %>
        </div>
      </div>
      <div class="modal-footer d-flex justify-content-around">
        <button type="button" class="btn-blue" data-dismiss="modal">Close</button>
        <%= f.submit class: "btn-red" %>
      </div>
      <% end %>
    </div>
  </div>
</div>