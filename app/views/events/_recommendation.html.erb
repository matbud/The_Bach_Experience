<div class="card-container text-center">

  <h3 class="text-center mt-2 py-4">Recommendations for <em><%=@current_user.first_name %>'s </em> Event</h3>

  <div class="row">

    <div class="col-6 d-flex justify-content-center">
      <h2>HOTEL</h2>
      <%# <% @recommendation.hotel.each do |hotel| %>
      <div class="card-trip">
        <%# Img to be replaced by seed pictures %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <%# <% if @hotel.photos.attached? %>
        <%# <%= cl_image_tag hotel.photos.first.key %>
        <%# <% end %>
        <div class="card-trip-infos">
          <h2><%= @recommendation.hotel.name %></h2>
          <p><%= @recommendation.hotel.description %></p>
          <p><em><%= @recommendation.hotel.address %></em></p>
        </div>
        <div class="hotel-price">
          <h3><%= "#{ @recommendation.hotel.price_per_night}€" %></h3>
          <p>/ per night</p>
        </div>
      </div>
      <%# <% end %>
    </div>

    <%# <h2>Activities:</h2> %>
    <div class="col-6">
      <div class="card-products row">
        <h2>ACTIVITIES</h2>
        <% @recommendation.recommended_activities.each do |activity| %>
          <div class="card-product">
            <%# Img to be replaced by seed pictures %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <%# <% if activity.photos.attached? %>
            <%# <%= cl_image_tag activity.photos.first.key %>
            <%# <% end %>
            <div class="card-product-infos">
              <h2><%= activity.activity.name %></h2>
              <br>
              <p><%= activity.activity.description %></p>
            </div>
            <div class="activity-price">
              <h3><%= "#{ activity.activity.price }€" %></h3>
              <p>/ per night</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
