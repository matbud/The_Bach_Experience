    <%= f.input :theme, as: :radio_buttons, collection: ['Wild', 'Nature', "Fancy", 'Cosy'] %>
    <%= f.input :number_of_guests, input_html: { min: 1 } %>
    <%= f.input :budget_per_person, input_html: { min: 1, placeholder: 'â‚¬' } %>
    <%= f.input :location %>
    <%= f.input :start_date, as: :string %>
    <%= f.input :end_date, as: :string %>
    <%= f.submit %>
  <% end %>
</div>
