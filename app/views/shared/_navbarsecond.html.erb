<div class="navbar-2 navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar">
    <%= link_to root_path, class: "navbar-brand-2" do %>
      <%= image_tag "logos.png" %>
    <% end %>
  </div>
  <div class="collapse navbar-collapse navbar-btn-avatar" id="navbarSupportedContent">
    <div class="bnt-actioncall-navbar text-center">
      <%= link_to "CREATE EVENT", new_event_path, class:"btn draw-border text-center" %>
      <%# < class="btn-blue text-center">─ CREATE EVENT ─</a> %>
      <%# <div class="bnt-actioncall-navbar text-center"><a class="btn-blue text-center" href="#">─ CREATE EVENT ─</a></div> %>
      <%# <% end %>
    </div>
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%# Avatar picture %>
            <%= cl_image_tag current_user.photo.key, class: "avatar-2 dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%# Default picture %>
            <%= image_tag "https://pbs.twimg.com/profile_images/1380119262950531074/sYlD_F3U_400x400.jpg", class: "avatar-2 dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.events.any? %>
              <%= link_to "My event dashboard", dashboard_path(current_user.events.first), class: "dropdown-item"%>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% elsif current_user.guests.any? %>
              <%= link_to "My event dashboard", dashboard_path(current_user.guests.last.event), class: "dropdown-item"%>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% else current_user.guests.any? %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn-gradient" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
