<div class="navbar-logo navbar-expand-sm navbar-light navbar-lewagon">
  <%# <div class="navbar-logo"> %>
  <div></div>
  <div class="navbar-img">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse navbar-btn-avatar" id="navbarSupportedContent">
    <div id="buttons-menu">
      <% if user_signed_in? %>
        <% unless current_user.guest %>
          <div class="bnt-actioncall-navbar text-center">
            <%= link_to "CREATE EVENT", new_event_path, class:"btn draw-border text-center" %>
            <%# < class="btn-blue text-center">─ CREATE EVENT ─</a> %>
            <%# <div class="bnt-actioncall-navbar text-center"><a class="btn-blue text-center" href="#">─ CREATE EVENT ─</a></div> %>
            <%# <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="bnt-actioncall-navbar text-center">
          <%= link_to "CREATE EVENT", new_event_path, class:"btn draw-border text-center" %>
        </div>
      <% end %>
    </div>
    <div id="burgers-menu">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%# Avatar picture %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%# Default picture %>
              <%= image_tag "https://pbs.twimg.com/profile_images/1380119262950531074/sYlD_F3U_400x400.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.event %>
                <%= link_to "My event dashboard", dashboard_path(current_user.event), class: "dropdown-item"%>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              <% elsif current_user.guest %>
                <%= link_to "My event dashboard", dashboard_path(current_user.guest.event), class: "dropdown-item"%>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              <% else current_user.guest %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "btn-gradient" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
