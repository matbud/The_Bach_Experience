<!-- Button trigger modal -->
<% if current_user == @event.user %>
  <a type="button" class="btn-red my-1" data-toggle="modal" data-target="#staticBackdrop">
    EVENT
  </a>
<% end %>

<!-- Modal -->
<%# tabindex="-1" - cut from the div below, causes js issues %>
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">What's your event ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class='form-event-new'>
          <%= simple_form_for [ @event, @new_planning ], remote: true do |f| %>
            <%= f.input :name, as: :string %>
            <%= f.input :start_time, as: :string %>
            <%= f.input :end_time, as: :string %>
            <hr>
            <div class="row justify-content-space-around">
              <div class="col">
                 <%= f.submit "ADD", :class => "btn-blue" %>
               </div>
              <div class="col">
                <a type="button" class="btn-blue text-center" data-dismiss="modal">CLOSE</a>
              </div>

            </div>
            <%# <%= f.button :submit, class:"btn-blue" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
